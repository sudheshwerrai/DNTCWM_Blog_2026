@model IEnumerable<Tag>

@{
    ViewData["Title"] = "Tag List";
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Tags</li>
    </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="mb-0">@ViewData["Title"]</h1>
    <a asp-controller="AdminTags" asp-action="Add" class="btn btn-primary">Add New Tag</a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">No tags found.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Display Name</th>
                <th>Name</th>
                <th style="width: 180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tag in Model)
            {
                <tr>
                    <td>@tag.DisplayName</td>
                    <td>@tag.Name</td>
                    <td>
                        <a asp-controller="AdminTags" asp-action="Edit" asp-route-id="@tag.Id" class="btn btn-sm btn-secondary me-1">Edit</a>

                        <form asp-controller="AdminTags" asp-action="Delete" asp-route-id="@tag.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this tag?');">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}